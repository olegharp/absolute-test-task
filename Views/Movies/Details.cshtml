@model FilmsCatalog.Models.Movie

@{
    ViewData["Title"] = "Карточка фильма";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreatorName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreatorName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReleaseYear)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Director)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>
        @if(@Model.Poster != null)
        {
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.PosterFile)
            </dt>
            <dd class = "col-sm-10">
                @Html.Raw("<div id=\"poster-container\" style=\"background: url('data:image/jpeg;base64,"
                                    + Convert.ToBase64String(@Model.Poster) + "\" />")
            </dd>
        }
    </dl>
    <div class="flex-container">
            @if(Model.IsCreator == true){
                <div class="form-group">
                    <a asp-action="Edit" asp-route-id="@Model.ID">Редактировать</a>
                </div>
            }
        <div>
            <a asp-action="Index">К списку фильмов</a>
        </div>
    </div>
</div>
